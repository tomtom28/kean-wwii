<!-- Link in Author Page CSS -->
<link href="/assets/style/search-authors.css" rel="stylesheet" type="text/css">


<!-- Title -->
<h2 align="center">AUTHORS</h2>

<br>

<!-- Search Bar Components -->
<div class="row">

  <!-- Empty Div to move search bar to the right -->
  <div class="col-md-3 col-xs-1"></div> 

    <!-- Search Bar -->
    <div class="col-md-6 col-xs-10">
      <div class="input-group">

        <!-- Input Fields -->
        <input id="autherSearchBox" placeholder="Search" type="text" class="form-control" aria-label="...">
        <div class="input-group-btn">

          <!-- First Name vs. Last Name Search -->
          <button id="authorLastOrFirstName" type="button" class="btn btn-default dropdown-toggle searchButtons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last Name <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a id="lastNameSearch" href="#">Last Name</a></li>
            <li><a id="firstNameSearch" href="#">First Name</a></li>
          </ul>

          <!-- Submit Button -->
          <button id="authorSearchSubmit" type="button" class="btn btn-primary searchButtons"><span class="glyphicon glyphicon-search"></span></button>

        </div>



      </div>
    </div>
  </div>


<!-- Click on Author Last Name Letter -->
<div class="row">
  <br><br>
  <center>
    <a href="/search/authors/a"><div class="btn btn-default">A</div></a>
    <a href="/search/authors/b"><div class="btn btn-default">B</div></a>
    <a href="/search/authors/c"><div class="btn btn-default">C</div></a>
