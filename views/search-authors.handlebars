    <a href="/search/authors/z"><div class="btn btn-default">Z</div></a>
  </center>
</div>


<br>

<!-- Div to Append all Authors -->

<div class="col-md-12">
  <br>
  <center>
    <div id="author_list">

      {{#if hbsObject}}

        {{!-- If found in database, Dynamically Append Authors of Selected Letter --}}
        {{#each hbsObject}}
          <button>
            <a href="/authors/{{lastName}}/{{firstName}}">
              <div class="author_box centered" data-lastname="{{lastName}}" data-firstname="{{firstName}}" style="background-color: white;">
                <img class="author_image" src="https://s3.amazonaws.com/kean-wwii-scrapbook/author-photos/{{lastName}}-{{firstName}}.jpg" alt="{{displayLastName}}, {{displayFirstName}}">
                <h3 class="author_footer"><center>{{displayLastName}}, {{displayFirstName}}</center></h3>
              </div>
            </a>
          </button>
        {{/each}}

        {{!-- Otherwise, append the Error Message --}}
        {{else}}
          <h3 style="background-color: white; padding: 15px;">Sorry. There are no authors listed under that letter.</h3>

      {{/if}}

    </div>
  </center>
</div>




