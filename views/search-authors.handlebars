    <a href="/search/authors/e"><div class="btn btn-default">E</div></a>
    <a href="/search/authors/f"><div class="btn btn-default">F</div></a>
    <a href="/search/authors/g"><div class="btn btn-default">G</div></a>
    <a href="/search/authors/h"><div class="btn btn-default">H</div></a>
