{{!-- Link in Letter Page CSS --}}
<link href="/assets/style/search-letters.css" rel="stylesheet" type="text/css">


{{!-- Title --}}
<h2 align="center">LETTERS</h2>

<br>

{{!-- Search Bar Components --}}
<div class="row">

  {{!-- Empty Div to move search bar to the right --}}
  <div class="col-md-3 col-xs-1"></div> 

    {{!-- Search Bar --}}
    <div class="col-md-6 col-xs-10">
      <div class="panel panel-default">
        <div class="panel-body">
          <center>

            <form action="/search/letters" method="POST">

              {{!-- Select Service Branch --}}
              <b>Service Branch: </b>
              <select id="selectedBranch" name="branch" class="btn btn-default letter-selection-dropdown">
                <option value="" selected>Any</option>
                <option value="Army">Army</option>
                <option value="Army (British)">Army (British)</option>
                <option value="Coast Guard">Coast Guard</option>
                <option value="Harbor Defense">Harbor Defense</option>
                <option value="Merchant Marines">Merchant Marines</option>
                <option value="Navy">Navy</option>
                <option value="Red Cross">Red Cross</option>
                <option value="US Marine Corps">US Marine Corps</option>
              </select>

              {{!-- Select Gender --}}
              <b>Sex: </b>
              <select id="selectedSex" name="sex" class="btn btn-default letter-selection-dropdown">
                <option value="" selected>Any</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
              </select>

              {{!-- Select Year --}}
              <b>Year: </b>
              <select id="selectedYear" name="year" class="btn btn-default letter-selection-dropdown">
                <option value="" selected>All</option>
                <option value="1941">1941</option>
                <option value="1942">1942</option>
                <option value="1943">1943</option>
                <option value="1944">1944</option>
                <option value="1945">1945</option>
                <option value="1946">1946</option>
                <option value="1950">1950</option>
              </select>

              {{!-- Submit Button --}}
             <button value="Submit" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
           </form>

          </center>


          {{!-- Show Results (if a search was done) --}}
          {{#if hbsObject}}
            {{!-- Append Search Terms --}}
            <center>
              <br>
              <p style="background-color: white;">Displaying letters written by <b id="sex-result">{{hbsObject.sex}}</b> from <b id="branch-result">{{hbsObject.branch}}</b> in <b id="year-result">{{hbsObject.year}}</b>.</p>
            </center>
          {{/if}}


        </div>
      </div>

    </div>

  </div>
</div>



<br>


{{!-- Div to Append all Letters --}}
<div class="row">
  <div class="col-md-12">
    <br>
    <center>
      <div id="letter_list">

        {{!-- Search was done --}}
        {{#if hbsObject}}         

          {{!-- Successful search --}}
          {{#if hbsObject.letterData}}

            {{!-- If found in database, Dynamically Append Selected Letters --}}
            {{#each hbsObject.letterData}}
              <a href="#">
                <button>
                  <div class="letter_box centered" style="background-color: white;">
                    <img class="letter_image" src="/assets/images/Cursive-Background.jpg" alt="{{filename}}">
                    <h3 class="letter_footer"><center>{{filename}}</center></h3>
                  </div>
                </button>
              </a>
            {{/each}}

          {{!-- Unsuccessful Search --}}
          {{else}}
            <h3 style="background-color: white; padding: 15px;">Sorry. No letters of within the search criteria were found.</h3>
          {{/if}}

        {{!-- No search was done yet --}}
        {{else}}
          <h3 style="background-color: white; padding: 15px;">Use the panel above to search for letters.</h3>
        {{/if}}

      </div>
    </center>
  </div>
</div>


{{!-- Link in JavaScript to remember last query --}}
<script src="/assets/javascripts/search-letters.js"></script>